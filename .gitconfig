[apply]
  whitespace = fix

[color]
  ui = always
[color "branch"]
  current = blue reverse
  local = yellow
  remote = magenta
[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold reverse
  newNormal = green bold
  newHighlight = green bold reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  excludesfile = ~/.gitignore
  whitespace = space-before-tab,trailing-space
  autocrlf = input
  pager = diff-highlight | diff-so-fancy | less --tabs=4 -RFX
  untrackedCache = true ; https://git-scm.com/docs/git-update-index#_untracked_cache
  editor = /usr/local/bin/nvim

[diff]
  algorithm = patience
  context = 5

[grep]
  lineNumber = true

[help]
  autocorrect = -1

; [interactive]
;   TODO doesn't quite work yet
;   diffFilter = diff-so-fancy | less --tabs=4 -RFX
;   TODO how to add `context` here?
;   context = 5

[merge]
  log = true
  tool = vimdiff

[mergetool]
  keepBackup = false

[push]
  default = current
  followTags = true

[user]
  useconfigonly = true
